---
import type { GetStaticPaths } from "astro";
import { mergeGetStaticPathsResults, createCollection, localePropsAndParams } from "astro-loader-i18n";
import { C } from "../../../site.config";

export const getStaticPaths: GetStaticPaths = async () => {
  const routePattern = "[...locale]/[files]"
  const collection = createCollection({ locales: C.LOCALES, routePattern });

  return mergeGetStaticPathsResults(
    localePropsAndParams(collection, C.DEFAULT_LOCALE),
  );
};

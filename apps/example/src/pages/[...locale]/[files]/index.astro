---
import { createCollection, i18nPropsAndParams } from "astro-loader-i18n";
import { C } from "../../../site.config";

export const getStaticPaths = async () => {
  const routePattern = "[...locale]/[files]";
  const collection = createCollection({ locales: C.LOCALES, routePattern });

  return i18nPropsAndParams(collection, {
    defaultLocale: C.DEFAULT_LOCALE,
    routePattern,
    segmentTranslations: C.SEGMENT_TRANSLATIONS,
  });
};

const { locale, translationId, translations } = Astro.props;
---

<dl>
  <dt>Locale</dt>
  <dd>{locale}</dd>
  <dt>Translation ID</dt>
  <dd>{translationId}</dd>
  <dt>Translations</dt>
  <dd>
    {JSON.stringify(translations)}
  </dd>
</dl>

